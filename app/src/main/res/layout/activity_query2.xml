<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f9">

        <TextView
            android:id="@+id/txt_j_2"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="自动检测"
            android:textAllCaps="true"
            android:textColor="#0a0a0a"
            android:textSize="23dp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="80dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/ic_launcher2" />

        <TextView
            android:id="@+id/txt_j_5"
            android:layout_width="160dp"
            android:layout_height="60dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="中文"
            android:textAllCaps="true"
            android:textColor="#1d1c1c"
            android:textSize="23dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#73b69d"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/edt_key_word_3"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="#ffffff"
            android:hint="请输入要查询的单词"/>

        <TextView
            android:id="@+id/txt_start_query_2"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="查询"
            android:textAllCaps="true"
            android:clickable="true"
            android:textColor="#ffffff"
            android:textSize="20dp" />

    </LinearLayout>



        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="1"
        android:background="#fcfcfc">

        <TextView
            android:id="@+id/txt_show_result_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            />

        </ScrollView>

</LinearLayout>